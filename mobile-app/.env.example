# API Configuration
API_URL=http://localhost:8000/api
STORAGE_URL=http://localhost:8000/storage

# Authentication
AUTH_TOKEN_KEY=auth_token
AUTH_REFRESH_TOKEN_KEY=refresh_token

# VNPay Configuration
VNPAY_MERCHANT_CODE=
VNPAY_URL=https://sandbox.vnpayment.vn/paymentv2/vpcpay.html
VNPAY_RETURN_SCHEME=vnecommerce

# Feature Flags
ENABLE_BIOMETRIC_LOGIN=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_OFFLINE_MODE=true

# Image CDN (Fallback Pexels images)
DEFAULT_PRODUCT_IMAGE=https://images.pexels.com/photos/4464821/pexels-photo-4464821.jpeg
DEFAULT_CATEGORY_IMAGE=https://images.pexels.com/photos/264636/pexels-photo-264636.jpeg
DEFAULT_BRAND_IMAGE=https://images.pexels.com/photos/1884581/pexels-photo-1884581.jpeg
DEFAULT_AVATAR_IMAGE=https://images.pexels.com/photos/1484794/pexels-photo-1484794.jpeg

# Cache Configuration
CACHE_TTL=3600000
MAX_OFFLINE_PRODUCTS=100

# Analytics
ANALYTICS_ENABLED=true
CRASH_REPORTING_ENABLED=true

# Version
APP_VERSION=1.0.0
BUILD_NUMBER=1
