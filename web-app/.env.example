# API Configuration
REACT_APP_API_URL=http://localhost:8000/api
REACT_APP_STORAGE_URL=http://localhost:8000/storage

# Authentication
REACT_APP_AUTH_TOKEN_KEY=auth_token

# VNPay Configuration
REACT_APP_VNPAY_RETURN_URL=http://localhost:3000/checkout/complete

# Feature Flags
REACT_APP_ENABLE_GUEST_CHECKOUT=true
REACT_APP_ENABLE_FLASH_SALE=true

# Image CDN (Fallback Pexels images)
REACT_APP_DEFAULT_PRODUCT_IMAGE=https://images.pexels.com/photos/4464821/pexels-photo-4464821.jpeg
REACT_APP_DEFAULT_CATEGORY_IMAGE=https://images.pexels.com/photos/264636/pexels-photo-264636.jpeg
REACT_APP_DEFAULT_BRAND_IMAGE=https://images.pexels.com/photos/1884581/pexels-photo-1884581.jpeg

# Admin Configuration
REACT_APP_ADMIN_PATH=/admin
REACT_APP_MAX_FILE_UPLOAD_SIZE=5242880
REACT_APP_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif

# Cache Configuration
REACT_APP_CACHE_TTL=3600000
